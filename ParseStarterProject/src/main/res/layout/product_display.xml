<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="10dp"

    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_marginLeft="30dp"
        android:id="@+id/cardView"
        android:orientation="horizontal"

        android:layout_marginRight="30dp"
        android:layout_width="320dp"
        android:layout_height="200dp">

        <LinearLayout
            android:orientation="vertical"
            android:background="#F2F5FC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:background="@drawable/prod_panel"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/product_image"
                    android:layout_width="150dp"
                    android:layout_height="120dp"
                    android:layout_marginTop="10dp" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/product_name"
                        android:layout_width="150dp"
                        android:layout_height="30dp"
                        android:textStyle="bold"
                        android:layout_marginTop="10dp" />

                    <TextView
                        android:id="@+id/product_publisher"
                        android:layout_width="150dp"
                        android:layout_height="30dp" />

                    <TextView
                        android:id="@+id/product_category"
                        android:layout_width="150dp"
                        android:layout_height="30dp" />


                    <TextView
                        android:id="@+id/product_price"
                        android:layout_width="150dp"
                        android:layout_height="30dp" />


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="3dp"
                android:orientation="horizontal"
                android:background="@drawable/action_panel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/call_cust"
                    android:layout_marginTop="5dp"
                    android:layout_width="30dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="50dp"
                    android:background="@drawable/call" />

                <ImageView
                    android:id="@+id/buy_book"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/buy"
                    android:layout_marginLeft="50dp"
                    android:layout_width="30dp"
                    android:layout_height="20dp" />


                <ImageView
                    android:id="@+id/message_cust"
                    android:background="@drawable/chat"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="50dp"
                    android:layout_width="30dp"
                    android:layout_height="20dp" />

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>



</LinearLayout>